<%- include("partials/header") %>

<div class="container">
    <h2>Meu Perfil</h2>

    <% if (user) { %>
        <div class="card">
            <p><strong>Nome de Usuário:</strong> <%= user.username %></p>
            <p><strong>Email:</strong> <%= user.email %></p>
            <!-- Adicionar mais informações do perfil conforme necessário -->
            <!-- Exemplo: <p>Membro desde: <%= new Date(user.created_at).toLocaleDateString("pt-BR") %></p> -->
        </div>

        <div class="card mt-2">
            <h3>Alterar Senha</h3>
            <form action="/auth/change-password" method="POST"> <!-- Rota a ser criada -->
                <div class="form-group">
                    <label for="current_password">Senha Atual</label>
                    <input type="password" id="current_password" name="current_password" required>
                </div>
                <div class="form-group">
                    <label for="new_password">Nova Senha</label>
                    <input type="password" id="new_password" name="new_password" required>
                </div>
                <div class="form-group">
                    <label for="confirm_new_password">Confirmar Nova Senha</label>
                    <input type="password" id="confirm_new_password" name="confirm_new_password" required>
                </div>
                <button type="submit" class="btn btn-primary">Alterar Senha</button>
            </form>
        </div>
        
    <% } else { %>
        <p class="alert alert-warning">Você precisa estar logado para ver seu perfil.</p>
        <a href="/auth/login" class="btn">Login</a>
    <% } %>
</div>

<%- include("partials/footer") %>
