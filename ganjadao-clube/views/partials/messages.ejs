<% if (typeof messages !== 'undefined' && (messages.success_msg || messages.error_msg || messages.info_msg)) { %>
  <div class="messages-container">
    <% if (messages.success_msg) { %>
      <div class="alert alert-success"><%= messages.success_msg %></div>
    <% } %>
    <% if (messages.error_msg) { %>
      <div class="alert alert-danger"><%= messages.error_msg %></div>
    <% } %>
    <% if (messages.info_msg) { %>
      <div class="alert alert-info"><%= messages.info_msg %></div>
    <% } %>
  </div>
<% } %>

